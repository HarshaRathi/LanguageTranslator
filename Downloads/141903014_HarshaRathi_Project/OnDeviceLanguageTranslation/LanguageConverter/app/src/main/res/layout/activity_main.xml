<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/spinner_ip"
        android:spinnerMode="dropdown"
        android:entries="@array/my12"
        android:scrollbarSize="90dp"

        android:textSize = "300dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginEnd="20dp" />
    <EditText
    android:id="@+id/lang1_text"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:layout_below="@id/spinner_ip"
    android:layout_marginTop="40dp"
    android:editable="true"
    android:enabled="true"
    android:hint="Enter Text Here"
    android:inputType="text"
    android:textSize="40dp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:id="@+id/spinner2_ip"
        android:spinnerMode="dropdown"
        android:entries="@array/my12"
        android:scrollbarSize="90dp"
        android:layout_below="@id/lang1_text"
        android:textSize = "300sp"
        android:background="@android:drawable/btn_dropdown"
        />


    <EditText
        android:id="@+id/lang2_text"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_below="@id/spinner2_ip"
        android:layout_marginTop="40dp"
        android:editable="false"
        android:enabled="false"
        android:hint="Converted Text"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/lang2_text"
        android:text="@string/convert"
        android:id="@+id/convert"
        android:layout_centerInParent="true"
        />



</RelativeLayout>